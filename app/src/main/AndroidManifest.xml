<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hassan.outdoor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="Outdoor"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" />
        <activity
            android:name=".ForgetPassword"
            android:label="@string/title_activity_forget_password" />
        <activity
            android:name=".EnterEmail"
            android:label="@string/title_activity_enter_email" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".Profile_Other"
            android:label="@string/title_activity_profile__other" />
        <activity
            android:name=".Message"
            android:label="@string/title_activity_message" />
        <activity
            android:name=".Inbox"
            android:label="@string/title_activity_inbox" />
        <activity
            android:name=".SendMessage"
            android:label="@string/title_activity_send_message" />
        <activity
            android:name=".Followers"
            android:label="@string/title_activity_followers" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".CheckinLocation"
            android:label="@string/title_activity_checkin_location" />
        <activity
            android:name=".Add_Place"
            android:label="@string/title_activity_add__place" />
        <activity
            android:name=".PlacePage"
            android:label="@string/title_activity_place_page"></activity>

        <activity
            android:name=".util.Comments"
            android:label="@string/title_activity_comments"></activity>
    </application>

</manifest>
